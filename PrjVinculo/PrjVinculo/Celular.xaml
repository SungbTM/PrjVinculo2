<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrjVinculo.Celular"
             Title="Celular"
             BindingContext="{x:Reference Celular}">
    <VerticalStackLayout>
        
        <Label 
            Text="Descrição"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Label 
            Text=""
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Label 
            Text="{Binding Marca}"
            FontSize="Large"
            VerticalOptions="Start" 
            HorizontalOptions="End" />
        <Label
            Text="Ficha técnica"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>
        <Label
            Text="{Binding Processador}"
            FontSize="Large"
            VerticalOptions="Start" 
            HorizontalOptions="End"/>
        <Label
            Text="Bateria em mAh"
            VerticalOptions="Start"
            HorizontalOptions="End"
            />
        <Label
    Text="{Binding Bateria}"
            
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="End"/>
        <Label
    Text="Resolução da tela em Polegadas"
    VerticalOptions="Start"
    HorizontalOptions="End"
    />
        <Label
    Text="{Binding Tela}"
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="End"/>
        <Label
    Text="Armazenamento do aparelho"
    VerticalOptions="Start"
    HorizontalOptions="End"
    />
        <Label
    Text="{Binding Memoria}"
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="End"/>
        
      

        <Label
Text="{Binding Capinha}"
FontSize="Large"
VerticalOptions="Start" 
HorizontalOptions="End"/>
        <Label
Text="Operadora recomendada"
VerticalOptions="Start"
HorizontalOptions="End"
/>

        <Label
Text="{Binding Operadora}"
FontSize="Large"
VerticalOptions="Start" 
HorizontalOptions="End"/>

        <Label
Text="Numero:"
VerticalOptions="Start"
HorizontalOptions="End"
/>

        <Label
Text="{Binding Numero}"
FontSize="Large"
VerticalOptions="Start" 
HorizontalOptions="End"/>

        <Label 
            Text="Preço"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Label 
            Text="{Binding Preco4}"
            FontSize="Large"
            VerticalOptions="Start" 
            HorizontalOptions="End" />
        <Label 
            Text="Categoria"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Label 
            Text="{Binding Categoria4}"
            FontSize="Large"
            VerticalOptions="Start" 
            HorizontalOptions="End" />
    </VerticalStackLayout>
</ContentPage>